{
  "private": true,
  "name": "svgmoji",
  "version": "1.8.0",
  "description": "Creates a link to an image for the emoji in the selection",
  "type": "module",
  "repository": "https://github.com/said-m/svgmoji",
  "author": "Said Magomedov <saids.inbox@gmail.com>",
  "license": "MIT",
  "keywords": [
    "emoji",
    "chrome",
    "extension",
    "vue"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:popup": "vite build --watch --mode development",
    "dev:content": "BUILD_TARGET=content vite build --watch --mode development",
    "dev:background": "BUILD_TARGET=background vite build --watch --mode development",
    "build": "rimraf dist && run-p build:*",
    "build:popup": "vite build --mode production",
    "build:content": "BUILD_TARGET=content vite build --mode production",
    "build:background": "BUILD_TARGET=background vite build --mode production",
    "lint": "eslint . --ext .vue,.js,.ts",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@csstools/normalize.css": "^12.0.0",
    "@said-m/common": "^1.0.0",
    "lodash.isequal": "^4.5.0",
    "vue": "^3.3.4",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/lodash.isequal": "^4.5.5",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.21.1",
    "husky": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-preset-env": "^10.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.1",
    "sass": "^1.41.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-static-copy": "^2.3.0",
    "vue-tsc": "^1.8.25"
  }
}
