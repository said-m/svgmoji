{
  "manifest_version": 3,
  "name": "SVGMoji",
  "version": "1.8.0",
  "description": "Creates a link to an image for the emoji in the selection",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "assets/images/logo-16.png",
      "128": "assets/images/logo-128.png"
    }
  },
  "icons": {
    "16": "assets/images/logo-16.png",
    "128": "assets/images/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
